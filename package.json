{
  "name": "snyk-azure-pipelines-task",
  "version": "0.2.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run task:compile && npm run enhancer:compile && npm run deploy:compile",
    "pretest": "npm run build",
    "test": "npm run task:test && npm run deploy:test",
    "eslint": "npm run task:eslint && npm run deploy:eslint",
    "format:check": "npm run task:format:check && npm run deploy:format:check",
    "format": "npm run task:format && npm run deploy:format",

    "task:compile": "tsc -b snykTask/tsconfig.json",
    "task:test": "jest --detectOpenHandles",
    "task:eslint": "eslint --cache 'snykTask/{src,test,public/js/{!(build)}}/**/*.{js,ts}'",
    "task:format:check": "prettier --check 'snykTask/{src,test,public/js/{!(build)}}/**/*.{js,ts}'",
    "task:format": "prettier --write 'snykTask/{src,test,scripts,public/js/{!(build)}}/**/*.{js,ts}'",

    "enhancer:compile": "tsc -b ui/enhancer/tsconfig.json",

    "deploy:compile": "tsc -b ops/deploy/tsconfig.json",
    "deploy:test": "jest --config=ops/deploy/jest.config.js",
    "deploy:eslint": "eslint --cache 'ops/deploy/**/*.ts'",
    "deploy:format:check": "prettier --check 'ops/deploy/**/*.ts'",
    "deploy:format": "prettier --write 'ops/deploy/**/*.ts'",
    "deploy:run": "node ops/deploy/dist/deploy.js"
  },
  "author": "snyk.io",
  "license": "MIT",
  "dependencies": {
    "azure-pipelines-task-lib": "2.9.3",
    "jquery": "^3.4.1",
    "replace-in-file": "^4.2.0",
    "request": "^2.88.0",
    "vss-web-extension-sdk": "^5.141.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.1",
    "@types/q": "^1.5.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "azure-devops-node-api": "^9.0.1",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "jest": "^24.9.0",
    "mock-fs": "^4.10.4",
    "prettier": "^1.18.2",
    "sync-request": "^6.1.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
